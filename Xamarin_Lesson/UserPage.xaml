<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Lesson.UserPage">
    <StackLayout>
        <Label x:Name="Id" IsVisible="False"></Label>
        <Label x:Name="Name" HorizontalTextAlignment="Center" FontSize="32" FontAttributes="Bold"></Label>
        <Button Clicked="Logout_Button_Click"  Text="Выход"></Button>
        <Button Clicked="Upload_Image_Button_Click" Text="Выберите фото">
        </Button>
        <StackLayout x:Name="PhotoesStorage">
        </StackLayout>
        <Button Text="Проверить уведомления" Clicked="Check_Notifications_Button_Click">
        </Button>
        <Entry x:Name="Notification" Placeholder="Введите email друга"/>
        <Button Text="Отправить заявку" Clicked="Send_Notification_Button_Click">

        </Button>
    </StackLayout>
</ContentPage>