<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Lesson.AuthorizePage">

    <StackLayout>
        <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="32">Вход</Label>
        <Entry x:Name="Email" Placeholder="Введите email"></Entry>
        <Entry x:Name="Passwrod" Placeholder="Введите пароль" IsPassword="True"></Entry>
        <StackLayout Orientation="Horizontal" HeightRequest="50">
            <Button Clicked="SigIn_Button_Click" WidthRequest="250" HeightRequest="50" Text="Вход"></Button>
            <Button Clicked="RestorePassword_ButtonClick" WidthRequest="150" Text="Восстановить пароль"></Button>
        </StackLayout>
        <Button Clicked="NavigateToRegister_Button_Click" Text="Страница регистрации"></Button>

        <ListView x:Name="ErrorList">
        </ListView>

    </StackLayout>

</ContentPage>
